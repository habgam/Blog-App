@{ 
    CloudApp.Web.Controllers.HomePageController pg = new CloudApp.Web.Controllers.HomePageController();
    string lang = ViewContext.RouteData.Values["lang"].ToString();
}
@if (Request.QueryString["sc"] != null && Request.QueryString["sc"].ToString() == "1")
{
    <div class="alert alert-success" id="contactsuccess">
        <strong>Başarılı!</strong> Formunuz Başarılı Bir Şekilde Gönderilmiştir.
    </div>
}

@if (Request.QueryString["sc"] != null && Request.QueryString["sc"].ToString() == "0")
{
    <div class="alert alert-danger" id="contacterror">
        <strong>Hata!</strong> Formunuz Gönderilirken Bir Hata İle Karşılaşıldı.
    </div>
}

<div class="index-banner" style="background: url(/img/contact-bg.jpg) no-repeat bottom right #f8c015; background-size:contain; ">
    <img src="/blog/Theme/1/Content/img/figure.png" />
    <h1> @CloudApp.Web.Localization.LocalizationHelper.Localize("r_contact_us", culture: lang)</h1>
    <img src="/blog/Theme/1/Content/img/figure2.png" />
</div>
<div class="page-content">
    <div class="container">
        <div class="row">
            <div class="col-md-9 col-sm-8 col-xs-12 contact">
                <h2>@CloudApp.Web.Localization.LocalizationHelper.Localize("r_contact_information", culture: lang)</h2>
                <div class="col-md-4 col-xs-12 text-center">
                    <i class="fa fa-map-marker"></i>
                    <span>Sakarya Ünviersitesi, Teknoloji Geliştirme Bölgeleri, B blok, no: z04 Serdivan / Sakarya / Türkiye</span>
                </div>
                <div class="col-md-4 col-xs-12 text-center">
                    <i class="fa fa-phone"></i>
                    <span>+90 264 290 37 37</span>
                </div>
                <div class="col-md-4 col-xs-12 text-center">
                    <i class="fa fa-fax"></i>
                    <span>+90 264 681 45 61</span>
                </div>
                <div class="clearfix"></div>
                <h2>@CloudApp.Web.Localization.LocalizationHelper.Localize("r_contact_map", culture: lang)</h2>
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d24126.39058809399!2d30.51359300376971!3d40.898227669767145!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x409defd188bf872d%3A0x702f74cbdf2e0cff!2sSakarya+3.+Organize+Sanayi+B%C3%B6lgesi!5e0!3m2!1str!2str!4v1529331784552" width="96%" height="500" frameborder="0" style="border:5px solid #eee;" allowfullscreen></iframe>
                <h2>@CloudApp.Web.Localization.LocalizationHelper.Localize("r_contact_form", culture: lang)</h2>
                @using (Html.BeginForm("InsertForm", "HomePage", new { url = "/yazi/site-yazilari-2/iletisim-5/", header = "İletişim Formu", subject = "İletişim Formu" , whoSendMail = "insankaynaklari@ozgullu.com.tr" }))
                {
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        <input type="hidden" id="ExternalFormHeader_1" name="ExternalFormHeader_1" value="@CloudApp.Web.Localization.LocalizationHelper.Localize("r_contact_form_name", culture: lang)">
                        <input type="text" name="ExternalFormElement_1" id="ExternalFormElement_1" class="form-control" placeholder="@CloudApp.Web.Localization.LocalizationHelper.Localize("r_contact_form_name", culture: lang)" required="" />
                    </div>
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        <input type="hidden" id="ExternalFormHeader_2" name="ExternalFormHeader_2" value="@CloudApp.Web.Localization.LocalizationHelper.Localize("r_contact_form_surname", culture: lang)">
                        <input type="text" name="ExternalFormElement_2" id="ExternalFormElement_2" class="form-control" placeholder="@CloudApp.Web.Localization.LocalizationHelper.Localize("r_contact_form_surname", culture: lang)" required="" />
                    </div>
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        <input type="hidden" id="ExternalFormHeader_3" name="ExternalFormHeader_3" value="@CloudApp.Web.Localization.LocalizationHelper.Localize("r_contact_form_phone", culture: lang)">
                        <input type="text" name="ExternalFormElement_3" id="ExternalFormElement_3" class="form-control" placeholder="@CloudApp.Web.Localization.LocalizationHelper.Localize("r_contact_form_phone", culture: lang)" required="" />
                    </div>
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        <input type="hidden" id="ExternalFormHeader_4" name="ExternalFormHeader_4" value="Email">
                        <input type="text" name="ExternalFormElement_4" id="ExternalFormElement_4" class="form-control" placeholder="Email" required="" />
                    </div>
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <input type="hidden" id="ExternalFormHeader_5" name="ExternalFormHeader_5" value="@CloudApp.Web.Localization.LocalizationHelper.Localize("r_contact_form_message", culture: lang)">
                        <textarea name="ExternalFormElement_5" id="ExternalFormElement_5" rows="2" cols="20" class="form-control" placeholder="@CloudApp.Web.Localization.LocalizationHelper.Localize("r_contact_form_message", culture: lang)" required=""></textarea>
                    </div>
                    <div class="col-md-12">
                        <div class="col-md-6 col-xs-12">
                         <div class="g-recaptcha" data-sitekey="6LcYtmEUAAAAAFmUtMoSyo8WvSjAJ31yiTBV8YWx"></div>
                      
                        </div>
                        <div class="col-md-6 col-xs-12">
                         <button type="submit" class="btn pull-right m-t-b-30">@CloudApp.Web.Localization.LocalizationHelper.Localize("r_contact_form_sendmessage", culture: lang)</button>

                        </div>
                        

                    </div>
                }
            </div>
            @{

                CloudApp.Web.Models.ViewPartialObject mainMenu123 = pg.GetCategoryPartial(21, Request);
                if (mainMenu123 != null)
                {
                    Html.RenderPartial("~/blog/Theme/1/Views/CategoryPartial/_FastMenuHumanResources.cshtml", mainMenu123.ViewModel);
                }

            }
        </div>
    </div>
</div>


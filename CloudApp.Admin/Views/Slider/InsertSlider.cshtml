@model CloudApp.Data.Model.CSlider
@{
   
}
<div class="rightpanel">

    @*<ul class="breadcrumbs">
            <li><a href="dashboard.html"><i class="iconfa-home"></i></a> <span class="separator"></span></li>
            <li>Kategori Ekle</li>

        </ul>*@

    @Html.Partial("../Shared/_BreadCrumbs", (List<CloudApp.Data.ViewModel.ViewBreadCrumb>)ViewBag.BreadCrumbList)

    <div class="pageheader">
        @*<form action="results.html" method="post" class="searchbar">
                <input type="text" name="keyword" placeholder="To search type and hit enter..." />
            </form>*@
        <div class="pageicon"><span class="iconfa-laptop"></span></div>
        <div class="pagetitle">
            <h5>Slider</h5>
            @if (Model.Id != 0)
            {
                <h1>Slider Düzenle</h1>
            }
            else
            {
                <h1>Slider Ekle</h1>
            }
        </div>
    </div><!--pageheader-->







    <div class="maincontent">
        <div class="maincontentinner">



            <div class="widget">
                <h4 class="widgettitle">Slider Ekle</h4>
                <div class="widgetcontent">
                    @using (Html.BeginForm("InsertSlider", "Slider", FormMethod.Post, new { @id = "frmNewAssignment", @class = "form", @enctype = "multipart/form-data" }))
                    {

                       


                        <div class="form-group">
                            <label for="firstname" class="col-md-2 control-label">Slider Teması</label>
                            <div class="col-md-10">
                                <select name="ThemeId" id="ThemeId" class="form-control select-inline"></select>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="firstname" class="col-md-2 control-label">Slider Adı</label>
                            <div class="col-md-10">
                                @Html.TextBoxFor(m => m.Name, new { @class = "form-control input-default", @placeholder = "Slider Adı" })
                               
                               
                            </div>
                        </div>



                        <br /><br />
                        <button type="submit" class="btn btn-default">Kaydet</button>


                    }
                </div><!-- widgetcontent-->
            </div><!-- widgetcontent-->
            @Html.Partial("../Shared/_Footer")

        </div><!--maincontentinner-->
    </div><!--maincontent-->

</div><!--rightpanel-->
@section scripts{
    <script>
     $.getJSON('/blog/Admin/ItemTheme/GetThemeByType?type=4', {}, function (ThemeList) {
        var list = $('select#ThemeId');
        $(ThemeList).each(function (index, item) {
            list.append('<option value="' + item.Value + '">' + item.Text + '</option>');
        });

        if( @ViewBag.ItemThemeId!=0  )
        {

        var element = document.getElementById('ThemeId');
        element.value =  @ViewBag.ItemThemeId;

        @*$('select#SubCategoryId').value =@Model.SubCategoryId;*@
        }
     });
        </script>
    }
